<img id="burger-image"
  src="https://images.unsplash.com/photo-1530554764233-e79e16c91d08?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80"
  alt="image of hands making a hamburger">

<h1 class="title" style="text-align: center">Eat-Da-Burger!!</h1>

<div class="container-fluid">
  <form class="create-form" id="burgers">
    <div class="row">
      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          <p>{{this.burger_name}}</p>
          <button id="devourBtn" class="devour" type="submit">Devour</button>
          <div class="col-md-6" </li>
            {{/unless}}
            {{/each}}
      </ul>
      <div class="row">
        <ul>
          {{#each burgers}}
          {{#if this.devoured}}
          <li>
            <h3>Devoured!</h3>
            <p>{{this.burger_name}}</p>
            <div class="col-md-6">
          </li>
          {{/if}}
          {{/each}}
      </div>
    </div>
    <div class="container">
      <div class="form-group">
        <div class="row" <label for="ca">Add a Burger to Devour: </label>
          <input type="text" id="add" name="name">
        </div>
        <button type="submit">Add</button>
      </div>
    </div>
  </form>